
  <h1 class="titlez border shadow-effect"> Add a new player </h1>


<div class="w-50 mt-5" style="margin: 0 auto">
<%= simple_form_for(@player) do |f| %>

  <%= f.input :club, input_html: { class: 'shadow-effect' } %>
  <%= f.input :position, input_html: { class: 'shadow-effect' }%>
  <%= f.input :name, input_html: { class: 'shadow-effect' } %>
  <%= f.input :age, input_html: { class: 'shadow-effect' } %>
  <%= f.input :rating, input_html: { class: 'shadow-effect' } %>
  <%= f.input :strong_foot, input_html: { class: 'shadow-effect' } %>
  <%= f.input :price, input_html: { class: 'shadow-effect' } %>
  <%= f.input :description, input_html: { class: 'shadow-effect' } %>
  <%= f.submit 'Add your new player !', class: "sub" %>
<% end %>
</div>
