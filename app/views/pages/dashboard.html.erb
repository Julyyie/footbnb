<div class="container">
  <h1>Mon profil</h1>
  <p>Bienvenue <%= current_user.first_name %></p>

  <h2>Players I recruited</h2>



  <div class="cards">
    <% @my_bookings.each do |booking| %>
      <div class="card-product">
        <% num = rand(1..5) %>
        <%= image_tag "player_0#{num}.jpg" %>
        <div class="card-product-infos">
          <h2><%= booking.player.name  %></h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
          <p>From: <%= booking.rent_start %> to <%= booking.rent_ending %> </p>
          <p>Status: <%= booking.status %> </p>
        </div>
      </div>
    <% end %>
  </div>






<h2>My players</h2>





  <div class="card-info-dash">
    <% @my_players.each do |player| %>


  <% if player.bookings.size > 0 %>


    <div class="border">
      <h5><%= player.name %></h5>
      <h6>Price/day: <%= player.price %></h6>
      <p>description du joueur You can move this code into a module and include it into any model that supports filtering:</p>

      <div class="tags-dash d-flex">
        <div class="tag-dash"><p>Age: <%= player.age %></p></div>
        <div class="tag-dash"><p>Rating: <%= player.rating %></p></div>
        <div class="tag-dash"><p>Strong Foot: <%= player.strong_foot %></p></div>
        <div class="tag-dash"><p>Club: <%= player.club %></p></div>
        <div class="tag-dash"><p>Position: <%= player.position %></p></div>
      </div>
      <div class="bookings">
      <%player.bookings.each do |booking| %>
      <div class="border">
      <p>Booked By: <%= booking.user.first_name %></p>
        <p><%= booking.status %></p>
        <%= link_to "Accept", accept_path(booking), data: {turbo_method: :patch} %>
        <%= link_to "Decline", decline_path(booking), data: {turbo_method: :patch}  %>
        </div>
        <% end %>



      </div>









    </div>



  <% end %>

    <% end %>
  </div>





<div class="btn-green-flat">
<%= link_to "Create a player", new_player_path %>
</div>












</div>
